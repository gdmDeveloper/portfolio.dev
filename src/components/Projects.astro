---
import AngularIcon from "../icons/Angular.astro";
import BootstrapIcon from "../icons/Bootstrap.astro";
import TypeScriptIcon from "../icons/TypeScript.astro";

const TAGS = {
    ANGULAR: {
        name: "Angular",
        class: "bg-[#d4173b]/40 text-white",
        icon: AngularIcon,
    },
    BOOTSTRAP: {
        name: "Bootstrap",
        class: "bg-[#563d7c] text-white",
        icon: BootstrapIcon,
    },
    TYPESCRIPT: {
        name: "TypeScript.js",
        class: "bg-[#007acc] text-white",
        icon: TypeScriptIcon,
    },
};

const PROJECTS = [
    {
        title: "App Países",
        description:
            "Aplicación que permite la búsqueda de Países por Capital, Región o nombre de País. También ofrece información del país que seleccionamos.",
        link: "https://github.com/gdmDeveloper/appPaises",
        github: "https://gdmdeveloper.github.io/appPaises/",
        image: "projects/appPaises.webp",
        tags: [TAGS.ANGULAR, TAGS.BOOTSTRAP, TAGS.TYPESCRIPT],
    },
];
---

{
    PROJECTS.map(({ title, description, tags, link, github, image }) => (
        <article>
            <h3 class="text-2xl text-yellow-200 mb-3">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-1 rounded-full text-xs py-1 px-2 ${tag.class}`}>
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/10"
                src={image}
                alt={title}
            />
        </article>
    ))
}
